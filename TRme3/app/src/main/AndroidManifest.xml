<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tr_me"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tr_me_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TaskListActivity"></activity>
        <activity android:name=".TaskList" />
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OptionsMenu" />
        <activity android:name=".CreateToDo" />
        <activity android:name=".Settings" />
    </application>

</manifest>